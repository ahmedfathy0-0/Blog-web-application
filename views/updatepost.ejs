<%- include('partials/header.ejs') %>

<% if(isLogin) { %>

<h1>Choose the post you want to update!</h1>
<% if(posts.length > 0) { %>
<div class="container">
    <div class="row">
          <% posts.forEach(post => { %>
            <div class="col-md-4">
                <a href="/update/<%= post.id %>" class="card" >
                    <img src="<%= post.image %>" alt="web post card" class="card__img">
                    <span class="card__footer">
                      <span><%= post.title %></span>
                    </span>
                    
                  </a>
            </div>
            <% }) %>
        
    </div>
</div>
<% } else { %>
  <h2>There is no posts to edit  </h2>
<% } %>
<% } else { %>
  <h1>Please login to update the post</h1>
<%} %>

        




