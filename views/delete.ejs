<%- include('partials/header.ejs') %>

<h1>Choose the post you want to update!</h1>
<div class="container">
    <div class="row">
        <% if(posts.length > 0) { %>
          <% posts.forEach(post => { %>
            <div class="col-md-4">
                <a href="/delete/<%= post.id %>" class="card" >
                    <img src="<%= post.image %>" alt="web post card" class="card__img">
                    <span class="card__footer">
                      <span><%= post.title %></span>
                    </span>
                    
                  </a>
            </div>
            <% }) %>
        <% } else { %>
            <h2>There is no posts to delete  </h2>
        <% } %>
    </div>
</div>
        




