<%- include('partials/header') %>

<div class="card-container">
<% if(posts.length > 0) { %>
    <div class="row">
          <% posts.forEach(post => { %>
            <div class="col-md-4">
                <a href="/post/<%= post.id %>" class="card">
                    <img src="<%= post.image %>" alt="web post card" class="card__img">
                    <span class="card__footer">
                      <span><%= post.title %></span>
                    </span>
                    
                </a>
            </div>
            <% }) %>
    </div>
    <% } else { %>
      <h1>Welcome to Web Blog App</h1>
      <h2>please add new post </h2>
  <% } %>
</div>

        





<%- include('partials/footer') %>